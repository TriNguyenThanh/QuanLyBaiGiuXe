<!-- Quick Search -->
<section class="search-section" id="search-ticket">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="search-card">
                    <h2 class="text-center mb-4">Tra Cứu Thông Tin Vé</h2>
                    <form class="search-form">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="ticketNumber" class="form-label">Mã Vé</label>
                                <input type="text" class="form-control" id="ticketNumber" placeholder="Nhập mã vé...">
                            </div>
                            <div class="col-md-6">
                                <label for="licensePlate" class="form-label">Biển Số Xe</label>
                                <input type="text" class="form-control" id="licensePlate" placeholder="VD: 30A-12345">
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="bi bi-search me-2"></i>Tra Cứu
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

